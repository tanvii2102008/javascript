    }

    input, button {
        width: 100%;
        padding: 10px;
        margin: 10px 0;
        border-radius: 5px;
        border: none;
    }

    button {
        background: #38bdf8;
        color: black;
        font-weight: bold;
        cursor: pointer;
    }

    .error {
        color: #ff6b6b;
        font-size: 14px;
        text-align: left;
    }

    .success {
        color: #6ee7b7;
        font-size: 16px;
        margin-top: 10px;
    }
