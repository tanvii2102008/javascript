<body>

<div class="box">
    <h2>Number Guessing Game</h2>
    <p>I am thinking of a number between <b>1 and 100</b></p>

    <input type="number" id="guess" placeholder="Enter your guess...">
    <button onclick="check()">Guess</button>

    <div class="msg" id="message"></div>
</div>

<script>
    let secret = Math.floor(Math.random() * 100) + 1;
    let attempts = 0;

    function check(){
        let g = Number(document.getElementById("guess").value);
        attempts++;

        if(g === secret){
            document.getElementById("message").innerHTML =
                "ðŸŽ‰ Correct! The number was " + secret + 
                "<br>You guessed in " + attempts + " attempts!";
        }
        else if(g > secret){
            document.getElementById("message").innerHTML = "ðŸ“‰ Too high! Try again.";
        }
        else if(g < secret){
            document.getElementById("message").innerHTML = "ðŸ“ˆ Too low! Try again.";
        }
    }
</script>

